{
  "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node18/tsconfig.json"],
  "include": ["src/"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "swc": true
  }
}
